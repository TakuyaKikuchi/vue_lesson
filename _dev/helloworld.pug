doctype html
html
  head
    meta(charset='utf-8')
    title Vue TEST
    // Vue.js を読み込む
    script(src='https://cdn.jsdelivr.net/npm/vue')
  body
    #app-1 {{ message }}
    // {{ message }} が Vueデータに置換される
    script.
      var app1 = new Vue({
      el: '#app-1', /* #app-1 要素に対して Vue を適用する */
        data: {
          message: 'vueの勉強、もう疲れたよ'
        } /* message という名前のデータを定義する */
      })
